{
  "name": "botbuilder-adapter",
  "version": "0.0.0-semantically-released",
  "description": "Adapter for the BotbuilderJS framework",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src --ext ts && prettier --list-different src/*.ts",
    "build": "tsc",
    "semantic-release": "semantic-release",
    "dev": "nodemon --ext ts --exec \"ts-node example/server.ts\"",
    "test": "jest"
  },
  "author": "Bitworkers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitworkers-official/botbuilder-adapter.git"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/restify": "^7.2.10",
    "botbuilder": "^4.4.0",
    "botbuilder-dialogs": "^4.4.0",
    "eslint": "^5.16.0",
    "eslint-config-bitworkers": "^1.21.10",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "prettier-config-bitworkers": "^1.5.0",
    "restify": "^8.3.2",
    "semantic-release": "^15.13.12",
    "source-map-support": "^0.5.12",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "botbuilder": "^4.4.0",
    "botbuilder-dialogs": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "{!(package)*.json,*.code-snippets,.*rc}": [
      "npx prettier --write",
      "git add"
    ],
    "package.json": [
      "npx prettier --write",
      "git add"
    ]
  }
}
