{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "types": ["jest"],
    "strictFunctionTypes": true,
    "resolveJsonModule": true
  },
  "include": ["examples/**/*", "src/**/*"],
  "exclude": ["deprecated"]
}
